server {
    listen 80;
    server_name SEU_DOMINIO_OU_IP;

    # Aumenta o limite de upload para 50MB
    client_max_body_size 50M;

    # Aponta para a pasta de build do Frontend
    root /var/www/html/sistema_onboarding/frontend/dist;
    index index.html;

    # Garante que o React Router funcione (SPA)
    location / {
        try_files $uri $uri/ /index.html;
    }

    # Proxy Reverso para o Backend (Node.js na porta 3000)
    location ~ ^/(process|employees|employee|upload|answer|next-step|file) {
        proxy_pass http://localhost:3000;
        proxy_http_version 1.1;
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection 'upgrade';
        proxy_set_header Host $host;
        proxy_cache_bypass $http_upgrade;
    }
}
